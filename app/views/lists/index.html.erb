<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Type of list</th>
      <th>Mode</th>
      <th>To approve</th>
      <th>Type to approve</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.user.email %></td>
        <td><%= list.title %></td>
        <td><%= list.type_of_list %></td>
        <td><%= list.mode %></td>
        <td><%= list.to_approve %></td>
        <td><%= list.type_to_approve %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

